
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Estadios</h1>
<br />

<div>
    <table class="table table-striped table-bordered table-danger">
        <thead class="text-center">
            <tr>
                <th>Id Estadio</th>
                <th>Nombre</th>
                <th>Foto</th>
                <th>Id Pais</th>
                <th>Nombre Pais</th>

            </tr>

        </thead>

        <tbody class="text-center">

            @foreach(PL.Models.Estadio estadio in Model.Estadios)
            {
                <tr>
                    <td>@estadio.IdEstadio</td>
                    <td>@estadio.Nombre</td>
                    <td><img src="@estadio.Foto" width="50" height="50" /></td>
                    <td>@estadio.Pais.IdPais</td>
                    <td>@estadio.Pais.Nombre</td>

                </tr>
                
            }

        </tbody>

    </table>

</div>



