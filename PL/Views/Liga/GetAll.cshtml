
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Ligas</h1>
<br />
<a class="btn btn-dark" href="@Url.Action("Form", "Liga")">Agregar</a>
<br />
<div>
    <table class="table table-striped table-success">
        <thead>
            <tr>
                <th>Id Liga</th>
                <th>Nombre</th>
                <th>Logo</th>
                <th>Id Pais</th>
                <th>Nombre Pais</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>

        <tbody>
            @foreach(PL.Models.Liga liga in Model.Ligas)
            {
                <tr>
                    <td>@liga.IdLiga</td>
                    <td>@liga.Nombre</td>
                    <td><img src="@liga.Logo" width="50" /></td>
                    <td>@liga.Pais.IdPais</td>
                    <td>@liga.Pais.Nombre</td>
                    <td><a class="btn btn-warning" href="@Url.Action("Form", "Liga", new {IdLiga = liga.IdLiga})">+</a></td>
                    <td><a class="btn btn-info" href="@Url.Action("Delete", "Liga", new {IdLiga = liga.IdLiga})" onclick="return confirm('Estas seguro que deseas ELIMINAR este REGISTRO?');">-</a></td>
                   
                </tr>
            }

        </tbody>
    </table>
</div>

