@model PL.Models.Liga
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Formulario Ligas</h1>
<br />

@using(Html.BeginForm("Form", "Liga", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(model => model.IdLiga)

    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new {@class = "form-control"})
        </div>

        <div class="col-md-4">
            @Html.LabelFor(model => model.Logo)
            @Html.TextBoxFor(model => model.Logo, new {@class = "form-control"})
        </div>

        <div class="col-md-4">
            @Html.LabelFor(model => model.Pais.IdPais)
            @Html.TextBoxFor(model => model.Pais.IdPais, new {@class = "form-control"})
        </div>
    </div>

    <button class="btn btn-success" type="submit">Guardar</button>
    <a class="btn btn-danger" href="@Url.Action("GetAll", "Liga")">Regresar</a>


    
}

